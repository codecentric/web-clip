{
  "manifest_version": 2,
  "name": "WebClip - Clip all the things",
  "short_name": "WebClip",
  "description": "Store all the interesting things around the Web on your personal online datastore",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_title": "WebClip"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [],
  "options_page": "options.html"
}
